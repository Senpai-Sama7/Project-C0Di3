# Core Agent Environment Configuration Example
# Copy this file to .env and update with your actual values

# ================================
# Environment
# ================================
NODE_ENV=production

# ================================
# Security - REQUIRED
# ================================
# Generate secure keys using: openssl rand -base64 32
MEMORY_ENCRYPTION_KEY=your-secure-random-key-min-32-chars
JWT_SECRET=your-secure-jwt-secret-min-32-chars
ADMIN_PASSWORD=YourSecurePassword123!

# ================================
# LLM Configuration
# ================================
LLM_API_URL=http://localhost:8000
MODEL_PATH=models/gemma-2b-it.Q4_K_M.gguf

# ================================
# Services
# ================================
LOG_ANALYZER_URL=http://localhost:5001

# ================================
# Memory System
# ================================
MEMORY_VECTOR_STORE=local
MEMORY_CACHE_SIZE=1000
MEMORY_TTL=3600000

# ================================
# Database (Optional)
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=coreagent
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_DB=core_agent

# ================================
# Redis Cache (Optional)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-me-redis-password

# ================================
# Performance
# ================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
MAX_CONCURRENT_OPERATIONS=10

# ================================
# Monitoring
# ================================
HEALTH_CHECK_PORT=3001
ENABLE_METRICS=true
METRICS_PORT=9090

# ================================
# Logging
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/core-agent.log

# ================================
# Security Tool Configuration
# ================================
ENABLE_TOOL_SANDBOX=true
TOOL_EXECUTION_TIMEOUT=300000
ALLOWED_TOOLS=nmap,burpsuite,metasploit

# ================================
# Feature Flags
# ================================
ENABLE_CAG=true
ENABLE_LEARN_MODE=true
ENABLE_AUDIT_LOGGING=true

# ================================
# Deployment
# ================================
PORT=3000
HOST=0.0.0.0
